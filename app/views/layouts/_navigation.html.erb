    <header class="navbar navbar-fixed-top navbar-default">
      <div class="container">
        <%=link_to "myRecipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>
        <div class="nav_item">
          <li class="dropdown">
           <a href="#" class="btn btn-default btn-warning dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Styles<span class="caret"></span></a>
           <ul class="dropdown-menu">
             <% Style.all.each do |style| %>
               <li><%= link_to style.name, style_path(style) %></li>
             <% end %>
             <% if logged_in? %>
               <li class='divider'></li>
               <li>
                   <%= link_to 'New Style', new_style_path %>
               </li>
             <% end %>
           </ul>
          </li>
        </div>
        <div class="nav_item">
          <li class="dropdown">
           <a href="#" class="btn btn-default btn-warning dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ingredients<span class="caret"></span></a>
           <ul class="dropdown-menu">
             <% Ingredient.all.each do |ingredient| %>
               <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
             <% end %>
             <% if logged_in? %>
               <li class='divider'></li>
               <li>
                   <%= link_to 'New Ingredient', new_ingredient_path %>
               </li>
             <% end %>
           </ul>
          </li>
        </div>
    
        <% if logged_in?  %>
        
          <ul class="nav_item">
            <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-success" %>
          </ul>
          
        <ul class="nav_item navbar-right">
          <li class="dropdown">
           <a href="#" class="btn btn-default btn-danger dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.chefname %> <span class="caret"></span></a>
           <ul class="dropdown-menu">
             <li><%= link_to "View Profile", chef_path(current_user) %></li>
             <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
             <li><a href="#">Something else here</a></li>
             <li role="separator" class="divider"></li>
             <li><%= link_to "Log out", logout_path %></li>
           </ul>
          </li>
        </ul>
        
        <% else %>
          <div class="nav_item">
            <%= link_to "Log in", login_path, class: "btn btn-default btn-success" %>
          </div>
        
        <% end %>
     </header>